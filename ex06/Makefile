NAME= harlFilter

CPP_FLAGS = -Wall -Werror -Wextra -MMD -MP  -std=c++98

OBJ_DIR = ./obj

SRC_FILES =	main	\
			Harl

SRC = $(addsuffix .cpp, ${SRC_FILE})
OBJ = $(addprefix ${OBJ_DIR}/, $(addsuffix  .o, ${SRC_FILES}))
DEP = $(addpreffix ${OBJ_DIR}/, $(addsuffix .d, ${SRC_FILES}))

all: ${NAME}

${NAME} : ${OBJ}
	c++ ${CPP_FLAGS} ${OBJ} -o $@

${OBJ_DIR}/%.o : %.cpp Makefile
	mkdir -p  ${OBJ_DIR}
	c++ ${CPP_FLAGS} -c $< -o $@

clean:
	rm -f ${OBJ_DIR}/*.o
	rm -f ${OBJ_DIR}/*.d

fclean: clean
	rm ${NAME}

re: fclean all

-include ${DEP}

.PHONY: all re clean fclean